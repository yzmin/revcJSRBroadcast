<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.revcjsrbroadcast.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="10dp"
        android:text="GPSOFF" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/light_Edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="灯类型,十六进制格式" />

        <EditText
            android:id="@+id/level_Edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="优先级，正整数" />

        <EditText
            android:id="@+id/onTime_Edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="亮时间，正整数" />

        <EditText
            android:id="@+id/offTime_Edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="灭时间，正整数" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_led"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="10dp"
        android:text="点亮LED" />

    <Button
        android:id="@+id/btn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_led"
        android:layout_marginTop="10dp"
        android:text="熄灭LED" />


</RelativeLayout>
